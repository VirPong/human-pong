<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent">
    <TableLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:id="@+id/ConnectionData">
        <TableRow android:layout_width="wrap_content" android:id="@+id/tableRow1" android:layout_height="wrap_content">
            <TextView android:id="@+id/MACAddressLabel" android:layout_height="wrap_content" android:layout_width="wrap_content" android:text="MAC address"></TextView>
            <EditText android:layout_height="wrap_content" android:id="@+id/MACAddress" android:layout_weight="1" android:layout_width="match_parent" android:text="xx:xx:xx:xx:xx:xx"></EditText>
        </TableRow>
        <TableRow android:layout_width="wrap_content" android:id="@+id/tableRow2" android:layout_height="wrap_content">
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/DriverNameView" android:text="Driver name"></TextView>
            <Spinner android:layout_width="match_parent" android:layout_height="wrap_content" android:id="@+id/DriverName"></Spinner>
        </TableRow>
    </TableLayout>

	<Button android:id="@+id/ConnectButton" android:text="@string/button_initial_text"
		android:layout_weight="0" android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:padding="10dp" />

	<LinearLayout android:id="@+id/ButtonIndicators1"
		android:orientation="horizontal" android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:layout_weight="0">
		<TextView android:id="@+id/ButtonLabelA" android:text="A"
			android:layout_height="wrap_content" android:layout_width="wrap_content"
			android:layout_weight="0" android:paddingRight="5dp"/>
		<CheckBox android:id="@+id/ButtonA" android:layout_height="wrap_content"
			android:layout_width="wrap_content" android:layout_weight="0" />
		<TextView android:id="@+id/ButtonLabelB" android:text="B"
			android:layout_height="wrap_content" android:layout_width="wrap_content"
			android:layout_weight="0"  android:paddingRight="5dp"/>
		<CheckBox android:id="@+id/ButtonB" android:layout_height="wrap_content"
			android:layout_width="wrap_content" android:layout_weight="0" />
		<TextView android:id="@+id/ButtonLabelC" android:text="C"
			android:layout_height="wrap_content" android:layout_width="wrap_content"
			android:layout_weight="0"  android:paddingRight="5dp"/>
		<CheckBox android:id="@+id/ButtonC" android:layout_height="wrap_content"
			android:layout_width="wrap_content" android:layout_weight="0" />
	</LinearLayout>
	<LinearLayout android:id="@+id/ButtonIndicators2"
		android:orientation="horizontal" android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:layout_weight="0">

		<TextView android:id="@+id/ButtonLabelX" android:text="X"
			android:layout_height="wrap_content" android:layout_width="wrap_content"
			android:layout_weight="0"  android:paddingRight="5dp"/>
		<CheckBox android:id="@+id/ButtonX" android:layout_height="wrap_content"
			android:layout_width="wrap_content" android:layout_weight="0" />
		<TextView android:id="@+id/ButtonLabelY" android:text="Y"
			android:layout_height="wrap_content" android:layout_width="wrap_content"
			android:layout_weight="0"  android:paddingRight="5dp"/>
		<CheckBox android:id="@+id/ButtonY" android:layout_height="wrap_content"
			android:layout_width="wrap_content" android:layout_weight="0" />
		<TextView android:id="@+id/ButtonLabelZ" android:text="Z"
			android:layout_height="wrap_content" android:layout_width="wrap_content"
			android:layout_weight="0"  android:paddingRight="5dp"/>
		<CheckBox android:id="@+id/ButtonZ" android:layout_height="wrap_content"
			android:layout_width="wrap_content" android:layout_weight="0" />
	</LinearLayout>
	<LinearLayout android:id="@+id/ButtonIndicators2"
		android:orientation="horizontal" android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:layout_weight="0">
		<TextView android:layout_height="wrap_content" android:layout_width="wrap_content"
			android:layout_weight="0" android:paddingRight="10dp" android:id="@+id/AxisLabelX1" android:text="X1"/>
		<SeekBar android:layout_width="fill_parent"
			android:layout_height="wrap_content" android:layout_weight="0"
			android:max="256" android:progress="127" android:paddingRight="5dp" android:id="@+id/AxisX1"></SeekBar>
	</LinearLayout>
	<LinearLayout android:id="@+id/ButtonIndicators2"
		android:orientation="horizontal" android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:layout_weight="0">
		<TextView android:layout_height="wrap_content" android:layout_width="wrap_content"
			android:layout_weight="0" android:paddingRight="10dp" android:id="@+id/AxisLabelY1" android:text="Y1"/>
		<SeekBar android:layout_width="fill_parent"
			android:layout_height="wrap_content" android:layout_weight="0"
			android:max="256" android:progress="127" android:paddingRight="5dp" android:id="@+id/AxisY1"></SeekBar>
	</LinearLayout>
	<LinearLayout android:layout_width="fill_parent" android:orientation="horizontal" android:layout_height="wrap_content" android:id="@+id/LinearLayout02" android:layout_weight="0">
		<TextView android:layout_width="wrap_content" android:paddingRight="10dp" android:layout_height="wrap_content" android:layout_weight="0" android:id="@+id/AxisLabelX2" android:text="X2"></TextView>
		<SeekBar android:layout_width="fill_parent" android:max="256" android:layout_height="wrap_content" android:paddingRight="5dp" android:progress="127" android:layout_weight="0" android:id="@+id/AxisX2"></SeekBar>
	</LinearLayout>
	<LinearLayout android:layout_width="fill_parent" android:orientation="horizontal" android:layout_height="wrap_content" android:id="@+id/LinearLayout01" android:layout_weight="0">
		<TextView android:layout_width="wrap_content" android:paddingRight="10dp" android:layout_height="wrap_content" android:layout_weight="0" android:id="@+id/AxisLabelY2" android:text="Y2"></TextView>
		<SeekBar android:layout_width="fill_parent" android:max="256" android:layout_height="wrap_content" android:paddingRight="5dp" android:progress="127" android:layout_weight="0" android:id="@+id/AxisY2"></SeekBar>
	</LinearLayout>
	
	<TextView android:id="@+id/LogLabel" android:text="Log data"
		android:layout_height="wrap_content" android:layout_width="fill_parent"
		android:layout_weight="0" android:paddingTop="10dp" />

	<ListView android:id="@+id/LogView"
		android:layout_height="wrap_content" android:layout_width="fill_parent"
		android:layout_weight="0" />
	
</LinearLayout>
